{% extends 'base.html.twig' %}

{% block body %}
    {% embed 'provider/box_filter.html.twig' with {
        form: formFilter,
        clear_path: path('my_transfers'),
        container_class: 'col-sm-2'
    } %}
    {% endembed %}
    <div class="p_t20">
        <div class="row m_b15">
            <div class="col-xs-12 m_b30">
                <div class="table-responsive table-layout no_m_t">
                    <table class="table table-single v-align-top table_sales_file">
                        <thead>
                        <tr class="tr-first text-center">
                            <th width="">{{ 'Fecha Creacion'|trans }}<span></span></th>
                            <th width="">{{ 'Cuenta Origen'|trans }}<span></span></th>
                            <th width="">{{ 'Cuenta Destino'|trans }}<span></span></th>
                            <th width="">{{ 'Monto $'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in pagination %}
                            <tr>
                                <td>{{ item.date|date('Y-m-d') }}</td>
                                <td>{{ item.purchase.customer.account.name }}</td>
                                <td>{{ item.account.name }}</td>
                                <td>{{ item.amount }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="100">{{ 'Sin transacciones'|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-xs-12 text-center m_b30">
                <div id="paginator">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}