{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="needs-validation" novalidate>
    {% if error %}
        <div class="alert alert-danger">Datos Invalidos!</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label for="inputUuid">Uuid</label>
            <input type="text" value="{{ last_username }}" name="uuid" id="inputUuid" class="form-control" autocomplete="username" required="required" autofocus>
            <div class="invalid-feedback">
                Please choose a ID.
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <label for="inputPassword">Password</label>
            <input type="password" maxlength="4" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            <div class="invalid-feedback">
                Please choose a password.
            </div>
        </div>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
